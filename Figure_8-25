// Ch8 Figure 8-25 Try This # 9
// Asterisks Pattern Program

#include <iostream>
using namespace std;

int main()
{
	for (int row = 5; row > 0; row -= 1) //outter loop
	{
		for (int col = 1; col <= row * 2; col += 1) //nested loop
			cout << "*"; //output 
		//end for
		cout << endl;
	}	//end for

	return 0;
}	//end of main function
